{% extends 'base.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>{{ product.title }}</h1>
	</div>

	<div class="row">
		<div class="col-12 mt-4">
			<div class="border border-dark rounded p-2 clearfix">
				<div class="d-flex">
					<img class="img-fluid rounded col-6" src="{{ product.image }}" alt="Image de {{ product.title }}">
					<div class="row">
						<div class="col-12">
							<h2 class="text-right">
								{{ product.price }}
								â‚¬
							</h2>
							<hr>
							<p>{{ product.description }}</p>
							<hr>
						</div>
					</div>
				</div>
				<a href="{{ path('cart_add', {'id': product.id }) }}" class="btn btn-success float-right">
					<i class="fas fa-shopping-cart mr-1"></i>
					Ajouter
				</a>
			</div>
		</div>
	</div>
{% endblock %}
